<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="251dp"
        android:src="@drawable/logo"></ImageView>
    <!-- GridLayout chứa các nút -->
    <TextView
        android:layout_width="375dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@drawable/custom_edittext"
        android:gravity="center"
        android:text="50 NĂM NGÀY GIẢI PHÓNG MIỀN NAM THỐNG NHẤT ĐẤT NƯỚC"
        android:textColor="@color/xanhdương"
        android:textSize="25sp"
        android:textStyle="bold" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="2"
        android:layout_marginTop="10dp"

        android:padding="20dp">

        <!-- Câu 1 -->
        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="60dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="8dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:focusable="true">

            <Button
                android:id="@+id/btnCN2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Chức năng 2"
                android:textSize="18sp"
                android:backgroundTint="@color/xanhdương"/>
        </androidx.cardview.widget.CardView>

        <!-- Câu 2 -->
        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="60dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="8dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:focusable="true">

            <Button
                android:id="@+id/btnCN3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Chức năng 3"
                android:textSize="18sp"
                android:backgroundTint="@color/red"/>
        </androidx.cardview.widget.CardView>

        <!-- Câu 3 -->
        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="60dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="8dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:focusable="true">

            <Button
                android:id="@+id/btnCN4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Chức năng 4"
                android:textSize="18sp"
                android:backgroundTint="@color/xanhla"/>
        </androidx.cardview.widget.CardView>

        <!-- Câu 4 -->
        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="60dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="8dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:focusable="true">

            <Button
                android:id="@+id/btnMe"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="About Me"
                android:textSize="18sp"
                android:backgroundTint="@color/tím"/>
        </androidx.cardview.widget.CardView>

    </GridLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Làm thêm"
        android:gravity="center"
        android:id="@+id/lthem"
        android:textStyle="bold"
        android:textSize="25dp"
        android:background="@color/cam">
    </TextView>

</LinearLayout>