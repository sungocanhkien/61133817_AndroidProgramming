<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HinhVuong">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="50dp"
        android:background="#54C6FA"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/design_default_color_error"
            android:text="Chu vi - Diện tích hình "
            android:gravity="center"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="28dp"
            >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="256dp"
        android:layout_height="188dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/hinhtron"
        android:gravity="center">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Bán kính: "
            android:textSize="20dp"
            android:textStyle="bold">

        </TextView>
        <EditText
            android:id="@+id/edtHinhTron"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hãy nhập bán kính hình tròn!">
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center">

        <Button
            android:id="@+id/btnHinhTron"
            android:layout_width="104dp"
            android:backgroundTint="#DECA21"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/design_default_color_error"
            android:textSize="25dp"
            android:textStyle="bold"
            android:text="Tính">

        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Kết quả: "
            android:textSize="20dp"
            android:textStyle="bold">

        </TextView>
        <EditText
            android:id="@+id/KQhinhTron"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nơi hiện thị kết quả!"
            android:enabled="false">
        </EditText>
</LinearLayout>