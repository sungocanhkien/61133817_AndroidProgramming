<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--Phép nhân -->
    <TextView
        android:id="@+id/txtTieuDe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PHÉP NHÂN 1X1"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#0026B0"
        tools:ignore="MissingConstraints">
    </TextView>
    <TextView
        android:id="@+id/txt1x1"
        app:layout_constraintTop_toBottomOf="@+id/txtTieuDe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 x 1 ="
        android:textSize="32dp"
        android:layout_marginTop="30dp"
        tools:ignore="MissingConstraints">
    </TextView>

    <TextView
        android:id="@+id/txtKQ"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textSize="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/txt1x1"
        app:layout_constraintStart_toEndOf="@+id/txt1x1"
        app:layout_constraintTop_toBottomOf="@+id/txtTieuDe"
        app:layout_constraintTop_toTopOf="@+id/txt1x1"
        app:layout_constraintVertical_bias="0.912"
        tools:ignore="MissingConstraints"></TextView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHECK"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/txtKQ"
        android:layout_marginTop="30dp"
        tools:ignore="MissingConstraints">
    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>